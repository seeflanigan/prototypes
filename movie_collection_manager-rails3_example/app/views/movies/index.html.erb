<h1>Listing movies</h1>
<h2>Total Run Time: <%= Movie.total_run_time_in_minutes %>

<table>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Run time in minutes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.rating %></td>
    <td><%= movie.run_time_in_minutes %></td>
    <td><%= link_to 'Show', movie %></td>
    <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
    <td><%= link_to 'Destroy', movie, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

